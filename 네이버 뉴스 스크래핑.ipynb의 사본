datetime, article]\n","        idx += 1\n","        print(\"#\", end=\"\")\n","\n","    try:\n","      next = soup.find('a', {'class':'btn_next'}).get('href')\n","      url = 'https://search.naver.com/search.naver' + next\n","    except:\n","      break\n","    return news_df"]},{"cell_type":"code","source":["query = input('검색 질의: ')\n","news_df = get_news(query, 1)\n","print('Done!')"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"_0KLRpx49vbQ","executionInfo":{"status":"ok","timestamp":1667442849651,"user_tz":-540,"elapsed":53881,"user":{"displayName":"‍심서현[ 학부휴학 / 영어영문학과 ]","userId":"03317337495555700739"}},"outputId":"7c133464-a56e-4f7a-a2db-4069b4589959"},"execution_count":21,"outputs":[{"output_type":"stream","name":"stdout","text":["검색 질의: 인공지능\n","Done!\n"]}]},{"cell_type":"code","source":["news_df['Article']"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"XoVt6ttXOE59","executionInfo":{"status":"ok","timestamp":1667442849652,"user_tz":-540,"elapsed":4,"user":{"displayName":"‍심서현[ 학부휴학 / 영어영문학과 ]","userId":"03317337495555700739"}},"outputId":"cf9e37b9-6d41-48c6-ab14-fc54e7a98147"},"execution_count":22,"outputs":[{"output_type":"execute_result","data":{"text/plain":["Series([], Name: Article, dtype: object)"]},"metadata":{},"execution_count":22}]}]}